/*flip---------------------------------------------------------------------------------*/


.card{
  
				position:relative;
				transform-style: preserve-3d;
				transition:all 500ms ease;
				border:1px solid grey;
				border-radius:10px;
				width:175px;
				height:100px;
				color:#373737;
				background-color:rgba(189,189,196,0.5);
				text-align:center;
				font-size:75px;
				font-family:"Algerian";
}

.front, .back{
  position:relative;
  font-size:75px;
  backface-visibility:hidden;
  color: #033246;
  display:flex;
  text-align:center;
  justify-content:center;
  font-size:54px;
  font-family: "Algerian";
}

.back{
  transform:rotateY(180deg);
  
}

.card.flipped{
  transform: rotateY(180deg);
}